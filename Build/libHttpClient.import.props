<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Condition="'$(LibHttpClientImported)' == 'true'" Project="Error attempting to import LibHttpClient twice. Condition all imports on ('ProjectName'Imported) != true." />
  <PropertyGroup>
    <LibHttpClientImported>true</LibHttpClientImported>
  </PropertyGroup>
  <Import Condition="'$(PlayFabPathsImported)' != 'true'" Project="PlayFab.C.paths.props" />
  <Import Condition="'$(HCPlatform)' == ''" Project="$(HCRoot)\platform_select.props" />
  <PropertyGroup>
    <HCProjectName Condition="'$(HCPlatform)' == 'Win32'">libHttpClient.Win32</HCProjectName>
    <HCProjectName Condition="'$(HCPlatform)' == 'GDK'">libHttpClient.143.GDK.C</HCProjectName>
    <HCOutDir>$(HCOutRoot)\$(Platform)\$(Configuration)\$(HCProjectName)\</HCOutDir>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <PreBuildEvent>
      <Command>MSBuild /nologo /v:m /t:"$(HCPlatform)\$([System.String]::Copy('$(HCProjectName)').Replace('.','_'))" /p:Configuration="$(Configuration)" /p:Platform="$(Platform)" "$(HCRoot)\libHttpClient.vs2022.sln"</Command>
    </PreBuildEvent>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>%(AdditionalIncludeDirectories);$(HCIncludeDir)</AdditionalIncludeDirectories>
    </ClCompile>
    <Link>
      <AdditionalLibraryDirectories>%(AdditionalLibraryDirectories);$(HCOutDir)</AdditionalLibraryDirectories>
      <AdditionalDependencies>%(AdditionalDependencies);$(HCProjectName).lib</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
  <!--Additional GDK dependencies-->
  <ImportGroup Condition="'$(HCPlatform)' == 'GDK' AND '$(GameDK)' != ''">
    <Import Project="$(GameDK)\$(XdkEditionTarget)\GRDK\ExtensionLibraries\Xbox.XCurl.API\DesignTime\CommonConfiguration\neutral\ExtensionLibrary.props"/>
  </ImportGroup>
  <ItemDefinitionGroup  Condition="'$(HCPlatform)' == 'GDK'">
    <Link>
      <AdditionalLibraryDirectories>%(AdditionalLibraryDirectories);$(Console_SdkLibPath)</AdditionalLibraryDirectories>
      <AdditionalDependencies>%(AdditionalDependencies);Appnotify.lib;winhttp.lib;crypt32.lib</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
  <!--Copy dlls to OutDir-->
  <ItemGroup Condition="'$(HCPlatform)' == 'Win32'" Label="CopyDependencies">
    <ReferenceCopyLocalPaths Include="$(HCOutDir)\libHttpClient.Win32.dll" />
    <ReferenceCopyLocalPaths Include="$(HCOutDir)\libHttpClient.Win32.pdb" />
  </ItemGroup>
</Project>
